{{#if updatePostForm}}
  <h4>Update {{post.title}} by {{post.author}}</h4>
        <div>
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title" placeholder=post.title}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" placeholder=post.author}}
        </div>

        <div class="form-group">
          <label for="content">Content</label>
          {{input value=content id="content" placeholder=post.content}}
        </div>

        <div class="form-group">
          <label for="image">Image</label>
          {{input value=image id="image" placeholder=post.image}}
        </div>

        <div class="form-group">
          <label for="category">Category</label>
          {{input value=category id="category" placeholder=post.category}}
        </div>

        <button class="btn btn-primary btn-sm" {{action 'update' post}}>Save</button>
      </form>
    </div>
{{else}}
    <button class="btn btn-primary btn-sm" {{action 'updatePostForm'}}>Update</button>
{{/if}}
